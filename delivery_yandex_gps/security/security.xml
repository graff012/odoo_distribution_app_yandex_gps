<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="group_delivery_gps_courier" model="res.groups">
    <field name="name">Delivery GPS Courier</field>
  </record>

  <record id="group_delivery_gps_manager" model="res.groups">
    <field name="name">Delivery GPS Manager</field>
  </record>

  <record id="rule_delivery_courier_own" model="ir.rule">
    <field name="name">Courier: own GPS record only</field>
    <field name="model_id" ref="model_delivery_courier"/>
    <field name="domain_force">[('user_id', '=', user.id)]</field>
    <field name="groups" eval="[(4, ref('delivery_yandex_gps.group_delivery_gps_courier'))]"/>
  </record>

  <record id="rule_delivery_courier_all_manager" model="ir.rule">
    <field name="name">Manager: see all couriers</field>
    <field name="model_id" ref="model_delivery_courier"/>
    <field name="domain_force">[(1,'=',1)]</field>
    <field name="groups" eval="[(4, ref('delivery_yandex_gps.group_delivery_gps_manager'))]"/>
  </record>

</odoo>
