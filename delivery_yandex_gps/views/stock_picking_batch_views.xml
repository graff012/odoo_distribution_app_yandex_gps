<odoo>
  <record id="view_picking_batch_form_yandex" model="ir.ui.view">
    <field name="name">stock.picking.batch.form.yandex</field>
    <field name="model">stock.picking.batch</field>
    <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_open_yandex_route"
                type="object"
                string="Open Route in Yandex"
                class="btn-primary"/>
      </xpath>
    </field>
  </record>
</odoo>
