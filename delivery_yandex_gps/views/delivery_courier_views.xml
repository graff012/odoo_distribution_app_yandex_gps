<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_delivery_courier_list" model="ir.ui.view">
    <field name="name">delivery.courier.list</field>
    <field name="model">delivery.courier</field>
    <field name="arch" type="xml">
      <list string="Couriers"
            decoration-success="tracking_status == 'tracking'"
            decoration-warning="tracking_status == 'stale'"
            decoration-danger="tracking_status == 'stopped'">
        <field name="user_id"/>
        <field name="tracking_status"/>
        <field name="is_tracking"/>
        <field name="last_update"/>
        <field name="last_latitude"/>
        <field name="last_longitude"/>
        <field name="last_accuracy_m"/>
      </list>
    </field>
  </record>

  <record id="action_delivery_courier_list" model="ir.actions.act_window">
    <field name="name">Couriers Status</field>
    <field name="res_model">delivery.courier</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_delivery_courier_status"
            name="Couriers Status"
            parent="menu_delivery_yandex_root"
            action="action_delivery_courier_list"
            groups="delivery_yandex_gps.group_delivery_gps_manager"/>

</odoo>
